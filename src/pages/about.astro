---
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'About Sivo | Our Mission and Values',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="About Sivo"
    image={{
      src: '~/assets/images/sivo-team-or-mission.jpg', // Suggestion: Replace with a team photo or an image representing your mission
      alt: 'The Sivo Team or Abstract Mission Representation',
    }}
  >
    <Fragment slot="title">
      We're Passionate About <br />
      <span class="text-accent dark:text-white highlight"> Revolutionizing Food & Beverage Procurement</span>
    </Fragment>

    <Fragment slot="subtitle">
      Sivo was born from a simple idea: wholesale ordering shouldn't be complicated. We're a team of industry veterans and tech enthusiasts dedicated to building intuitive tools that connect venues and suppliers, making their operations smoother and more profitable.
    </Fragment>
  </Hero>

  <!-- Stats Widget ****************** -->

  <Stats
    title="Sivo at a Glance"
    stats={[
      { title: 'Years Innovating', amount: '3+' }, // Example
      { title: 'Businesses Empowered', amount: '700+' }, // Example
      { title: 'Platform Uptime', amount: '99.9%' }, // Example
      { title: 'Passionate Team Members', amount: '25+' }, // Example
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="Our templates"
    subtitle="These principles guide every decision we make and every feature we build at Sivo."
    columns={3}
    isBeforeContent={true}
    items={[
      {
        title: 'Customer-Centricity',
        description:
          'We listen to our users and build solutions that solve their real-world problems, making their daily work easier and more efficient.',
        icon: 'tabler:users',
      },
      {
        title: 'Innovation',
        description:
          'We constantly explore new technologies and approaches to improve our platform and deliver a cutting-edge experience.',
        icon: 'tabler:bulb',
      },
      {
        title: 'Simplicity',
        description:
          'We believe powerful technology should be intuitive and easy to use. Our platform is designed for effortless adoption and operation.',
        icon: 'tabler:puzzle',
      },
    ]}
  />

  <!-- Features3 Widget - Can be repurposed for "Meet the Team" or "Our Technology" or removed -->
  <!-- For this example, let's remove the second Features3 to avoid repetition with "Our Core Values" -->
  <!--
  <Features3
    title="Our Technology Stack"
    subtitle="Built with modern, scalable, and reliable technologies to ensure a seamless experience."
    columns={3}
    isAfterContent={true}
    items={[
      {
        title: 'Cloud Native',
        description: 'Leveraging cloud infrastructure for scalability and reliability.',
        icon: 'tabler:cloud-code',
      },
      {
        title: 'Mobile First',
        description: 'Designed for an optimal experience on all devices, especially mobile.',
        icon: 'tabler:device-mobile',
      },
      {
        title: 'Secure by Design',
        description: 'Implementing robust security measures to protect your data.',
        icon: 'tabler:lock-access',
      },
    ]}
    image={{
      src: '~/assets/images/sivo-tech-stack.png', // Suggestion: Replace with a relevant tech image
      alt: 'Sivo Technology Stack',
    }}
  />
  -->

  <!-- Steps2 Widget ****************** -->
  <Steps2
    title="Our values"
    subtitle="From a simple idea to a trusted partner for the food and beverage industry."
    items={[
      {
        title: 'The Spark: Identifying Industry Pain Points',
        description:
          'Recognizing the inefficiencies and frustrations in traditional wholesale ordering processes.',
      },
      {
        title: 'Building Sivo: Crafting the Solution',
        description:
          'Developing an intuitive, powerful platform by collaborating closely with chefs, managers, and suppliers.',
      },
      {
        title: 'Empowering Businesses: Launch and Growth',
        description:
          'Helping businesses transform their operations, and continuously evolving Sivo based on user feedback and industry needs.',
      },
    ]}
  />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Our Impact & Vision"
    subtitle="We're dedicated to making a tangible difference in the F&B industry and are excited about what's next."
    isReversed={true}
    callToAction={{
      text: 'Join Our Mission',
      href: '/careers', // Example, if you have a careers page
    }}
    items={[
      {
        title: 'Global reach',
        description: 'Connecting thousands of venues and suppliers, streamlining millions in orders annually.',
        icon: 'tabler:globe',
      },
      {
        title: 'Positive Client Feedback & Success Stories',
        description:
          'Our clients consistently report significant time savings, reduced errors, and improved operational efficiency.',
        icon: 'tabler:message-star',
      },
      {
        title: 'Future of F&B Tech: Continuous Innovation',
        description:
          'We envision a future with even smarter procurement, deeper integrations, and tools that support sustainability in the F&B sector.',
        icon: 'tabler:award',
      },
    ]}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Connect With Us"
    tagline="We're Here For You"
    columns={2}
    items={[
      {
        title: 'General Inquiries',
        description: 'For any questions about Sivo, email us at <a href="mailto:info@sivo.com" class="text-primary hover:underline">info@sivo.com</a>',
        icon: 'tabler:mail',
      },
      {
        title: 'Sales & Partnerships',
        description: 'Interested in a demo or partnership? <a href="mailto:sales@sivo.com" class="text-primary hover:underline">sales@sivo.com</a>',
        icon: 'tabler:briefcase',
      },
    ]}
  />

  <!-- Features2 Widget ************** -->
  <!-- This section was previously commented out, but it's good for an About page if you have a physical presence or want to emphasize support channels -->
  <Features2
    title="Our Support Commitment"
    tagline="Always Available"
    columns={2}
    items={[
      {
        title: 'Dedicated Support Team',
        description:
          'Our knowledgeable support team is ready to assist you with any questions or issues, ensuring you get the most out of Sivo.',
        icon: 'tabler:headset',
      },
      {
        title: 'Comprehensive Help Resources',
        description:'Access our growing library of tutorials, FAQs, and best practice guides to help you succeed with Sivo.',
        icon: 'tabler:book',
      },
    ]}
  />
</Layout>
