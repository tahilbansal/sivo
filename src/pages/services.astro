---
import CallToAction from '~/components/widgets/CallToAction.astro';
import Content from '~/components/widgets/Content.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Hero from '~/components/widgets/Hero.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Sivo Services | Solutions for Venues & Suppliers',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="Services"
    title="The Sivo Platform: Built for Your Business"
    subtitle="Discover how Sivo's comprehensive suite of features empowers restaurants, cafes, hotels, and their suppliers to optimize ordering, manage inventory, and grow their business."
    actions={[{ variant: 'primary', text: 'Request a Demo', href: '/contact?demo=true' }]}
    image={{
      src: '~/assets/images/sivo-services-overview.png', // Suggestion: Replace with an image showing diverse users or platform benefits
      alt: 'Sivo Platform Services Overview',
    }}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    id="venues"
    title="Empowering Venues"
    subtitle="Streamline your procurement and kitchen operations with Sivo."
    columns={3}
    items={[
      {
        title: 'Centralized Ordering',
        description: 'Order from all your suppliers in one app. Ditch the late-night calls, texts, and emails. Save hours every week.',
        icon: 'tabler:apps',
      },
      {
        title: 'Real-time Order Tracking',
        description: 'Know the status of your orders from confirmation to delivery. Reduce uncertainty and plan better.',
        icon: 'tabler:map-pin-search',
      },
      {
        title: 'Inventory Management Tools',
        description: `(Coming Soon) Smart tools to help you track stock, reduce waste, and avoid costly 86'd items.`,
        icon: 'tabler:clipboard-list',
      },
      {
        title: 'Team Collaboration',
        description: 'Involve your whole team. Manage orders, approvals, and communications seamlessly in one place.',
        icon: 'tabler:users',
      },
      {
        title: 'Reporting & Analytics',
        description: 'Understand your spending, track price changes, and identify savings opportunities with clear reports.',
        icon: 'tabler:analyze',
      },
      {
        title: 'Easy Reordering',
        description: 'Reorder your usuals in a few clicks. Create custom order lists for even faster purchasing.',
        icon: 'tabler:refresh-dot',
      },
    ]}
  />

  <!-- Features2 Widget for Suppliers -->
  <Features2
    id="suppliers"
    title="Driving Growth for Suppliers"
    subtitle="Expand your customer base and streamline your wholesale operations."
    columns={3}
    isDark={true}
    classes={{ headline: { title: 'text-black', subtitle: 'text-slate-700' } }}
    items={[
      {
        title: 'Digital Product Catalog',
        description: 'Showcase your full range of products with high-quality images, detailed descriptions, and pricing tiers.',
        icon: 'tabler:notebook',
      },
      {
        title: 'Efficient Order Management',
        description: 'Receive all orders digitally in one organized dashboard. Reduce manual entry and errors.',
        icon: 'tabler:file-check',
      },
      {
        title: 'Direct Communication with Venues',
        description: 'Chat directly with your customers for order clarifications, new product announcements, and promotions.',
        icon: 'tabler:message-circle',
      },
      {
        title: 'Customer Relationship Management',
        description: 'Manage all your venue customers, their order history, and preferences in one place.',
        icon: 'tabler:address-book',
      },
      {
        title: 'Sales & Performance Analytics',
        description: 'Track your sales, identify popular items, and understand customer trends to grow your business.',
        icon: 'tabler:chart-bar',
      },
      {
        title: 'Route & Delivery Optimization',
        description: '(Coming Soon) Plan delivery routes efficiently and provide real-time delivery updates to your customers.',
        icon: 'tabler:route-2',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-slate-800"></div>
    </Fragment>
  </Features2>

  <Content
    isReversed
    id="features"
    tagline="Platform Highlights"
    title="Key Sivo Platform Features"
    items={[
      {
        title: 'Mobile-First & Web Accessible',
        description:
          'Access Sivo anytime, anywhere, on any device. Perfect for busy kitchens and on-the-go suppliers.',
        icon: 'tabler:devices-pc',
      },
      {
        title: 'Secure & Reliable',
        description:
          'Your data is protected with industry-leading security. Count on Sivo for dependable performance.',
        icon: 'tabler:shield-lock',
      },
      {
        title: 'Intuitive User Interface',
        description:
          'Designed for ease of use, Sivo requires minimal training for you and your team to get started.',
        icon: 'tabler:ease-in-control-point',
      },
      {
        title: 'Dedicated Customer Support',
        description:
          'Our expert team is here to help you with onboarding, training, and any questions you may have.',
        icon: 'tabler:headset',
      },
    ]}
    image={{
      src: '~/assets/images/sivo-platform-features.jpg', // Suggestion: Replace with a compelling image of the platform in use
      alt: 'Sivo Platform Interface',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">The Sivo Difference</h3>
      We've built Sivo from the ground up to address the unique challenges of the F&B wholesale industry.
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    tagline="Tangible Results"
    title="Benefits of Using Sivo"
    items={[
      {
        title: 'Significant Time Savings',
        description:
          'Slash hours spent on phone calls, text messages, and manual data entry each week.',
        icon: 'tabler:clock',
      },
      {
        title: 'Reduced Order Errors',
        description:
          'Digital orders mean fewer misunderstandings and costly mistakes. Get exactly what you ordered.',
        icon: 'tabler:circle-check',
      },
      {
        title: 'Improved Cost Control & Reduced Waste',
        description:
          'Clearer spending insights and better inventory management lead to less waste and improved profit margins.',
        icon: 'tabler:coin',
      },
      {
        title: 'Stronger Supplier Relationships',
        description:
          'Transparent, efficient communication and ordering build trust and stronger partnerships.',
        icon: 'tabler:users-group',
      },
    ]}
    image={{
      src: '~/assets/images/sivo-benefits-graphic.png', // Suggestion: Replace with an infographic or illustrative image
      alt: 'Benefits of Sivo Platform',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Benefits</h3>
    </Fragment>
  </Content>

  <!-- Testimonials Widget *********** -->

  <Testimonials
    title="What Our Clients Say About Sivo"
    testimonials={[
      {
        testimonial: `Sivo has transformed our ordering process. What used to take hours now takes minutes. The accuracy has improved dramatically, and our team loves how easy it is to use.`,
        name: 'Chef Maria Rodriguez',
        job: 'Head Chef, The Gourmet Spot',
        image: {
          src: '~/assets/images/testimonial-chef-maria.jpg', // Suggestion: Replace with actual or stock client photos
          alt: 'Chef Maria Rodriguez',
        },
      },
      {
        testimonial: `Since using Sivo, managing orders from our restaurant clients is a breeze. The digital catalog is a game-changer, and our efficiency has skyrocketed.`,
        name: 'John Davis',
        job: 'Sales Manager, FreshProduce Co.',
        image: {
          src: '~/assets/images/testimonial-john-davis.jpg', // Suggestion: Replace
          alt: 'John Davis',
        },
      },
      {
        testimonial: `We've cut down on ordering mistakes and saved so much time since switching to Sivo. Our suppliers are happier too! Highly recommend for any busy kitchen.`,
        name: 'Lisa Chen',
        job: 'General Manager, Urban Cafe Group',
        image: {
          src: '~/assets/images/testimonial-lisa-chen.jpg', // Suggestion: Replace
          alt: 'Lisa Chen',
        },
      },
    ]}
    callToAction={{
      text: 'See More Success Stories',
      href: '/case-studies', // Example: if you have a case studies page
      icon: 'tabler:chevron-right',
    }}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Request Your Free Demo',
        href: '/contact?demo=true',
      },
    ]}
    title="Ready to Transform Your Wholesale Operations?"
    subtitle="See how Sivo can save you time, reduce costs, and help your business thrive. Get started today!"
  />
</Layout>
