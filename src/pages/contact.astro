---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact Sivo | Get in Touch',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contact" title="Let's Connect!" />
  <HeroText tagline="Contact Sivo" title="Get in Touch With Our Team" />

  <ContactUs
    id="form"
    title="Drop us a message today!"
    subtitle="Whether you're a venue looking to streamline ordering, a supplier wanting to expand your reach, or just have a question about Sivo, we're here to help. Fill out the form below, and we'll get back to you shortly."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Full Name',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
      {
        type: 'text',
        name: 'company_name',
        label: 'Company Name',
      },
    ]}
    textarea={{
      label: 'Message',
    }}
    disclaimer={{
      label:
        'By submitting this contact form, you acknowledge and agree to the collection of your personal information.',
    }}
    description="Our support team typically responds within 24 business hours."
  />

  <!-- Features2 Widget ************** -->
  <Features2
    title="We are here to help!"
    title="Other Ways to Reach Sivo"
    subtitle="We're always happy to connect and answer your questions."
    columns={3}
    items={[
      {
        title: 'Sales Inquiries',
        description: `Interested in a demo or learning more about our plans for venues or suppliers? <br> sales@sivo.com`, // Replace with actual email
        icon: 'tabler:mail',
      },
      {
        title: 'Customer Support',
        description:
          'Are you an existing Sivo customer needing assistance? <br> support@sivo.com', // Replace with actual email
        icon: 'tabler:headset',
      },
      {
        title: 'General Questions',
        description:
          'For partnerships, media inquiries, or other general questions. <br> info@sivo.com', // Replace with actual email
        icon: 'tabler:info-circle',
      },
      {
        title: 'Phone',
        description: '+1 (234) 567-890',
        icon: 'tabler:headset',
      },
      {
        title: 'Our Office',
        description: '123 Sivo Avenue, Tech Hub City, ST 98765', // Replace with actual address
        icon: 'tabler:building-community',
      },
    ]}
  />
</Layout>
