---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Prices from '~/components/widgets/Pricing.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Steps from '~/components/widgets/Steps.astro';
import Features3 from '~/components/widgets/Features3.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Sivo Pricing | Plans for Venues & Suppliers',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText
    tagline="Pricing"
    title="Simple, Transparent Pricing for Your Business"
    subtitle="Choose a plan that fits your needs, whether you're a small cafe or a large supplier network. All plans include core Sivo features and dedicated support."
  />

  <!-- Pricing Widget ******************* -->
  <!-- Section for Venue Pricing -->
  <Prices
    title="Pricing for Venues"
    subtitle="Streamline your ordering and manage your kitchen efficiently."
    prices={[
      {
        title: 'Venue Starter',
        subtitle: 'Perfect for single locations and small teams.',
        price: 49, // Example price
        period: 'per month, per location',
        items: [
          { description: 'Order from unlimited suppliers' },
          { description: 'Up to 5 users' },
          { description: 'Basic inventory tracking' },
          { description: 'Standard reporting' },
        ],
        callToAction: { text: 'Get Started', href: '/signup/venue-starter' },
      },
      {
        title: 'Venue Pro',
        subtitle: 'For growing businesses and multiple locations.',
        price: 99, // Example price
        period: 'per month, per location',
        items: [
          { description: 'All Starter features, plus:' },
          { description: 'Up to 20 users' },
          { description: 'Advanced inventory & recipe costing' },
          { description: 'Customizable reports & analytics' },
          { description: 'Multi-location management' },
        ],
        callToAction: { text: 'Choose Pro', href: '/signup/venue-pro' },
        hasRibbon: true,
        ribbonTitle: 'Most Popular',
      },
      {
        title: 'Venue Enterprise',
        subtitle: 'Tailored solutions for large chains and groups.',
        price: 'Custom', // B2B often has custom pricing
        period: 'Contact Us',
        items: [
          { description: 'All Pro features, plus:' },
          { description: 'Unlimited users & locations' },
          { description: 'Dedicated account manager' },
          { description: 'API access & custom integrations' },
          { description: 'SLA & premium support' },
        ],
        callToAction: { text: 'Contact Sales', href: '/contact?inquiry=enterprise' },
      },
    ]}
  />

  <!-- Section for Supplier Pricing -->
   <Prices
    title="Pricing for Suppliers"
    subtitle="Expand your reach and manage wholesale orders with ease."
    classes={{ container: 'pt-8 md:pt-12' }}
    prices={[
      {
        title: 'Supplier Growth',
        subtitle: 'Ideal for suppliers building their network.',
        price: 79, // Example price
        period: 'per month',
        items: [
          {
            description: 'Digital product catalog'
          },
          {
            description: 'Manage up to 50 venue connections'
          },
          {
            description: 'Order management dashboard'
          },
          {
            description: 'Basic sales analytics'
          },
        ],
        callToAction: {
          text: 'Start Growing',
          href: '/signup/supplier-growth',
        },
        hasRibbon: true,
        ribbonTitle: 'popular',
      },
      {
        title: 'Supplier Pro',
        subtitle: 'For established suppliers with larger client bases.',
        price: 149, // Example price
        period: 'per month',
        items: [
          {
            description: 'All Growth features, plus:'
          },
          {
            description: 'Unlimited venue connections'
          },
          {
            description: 'Advanced sales & customer analytics'
          },
          {
            description: 'Promotional tools & features'
          },
        ],
        callToAction: {
          text: 'Go Pro',
          href: '/signup/supplier-pro',
        },
      },
      {
        title: 'Supplier Enterprise',
        subtitle: 'Custom solutions for large distributors and producers.',
        price: 'Custom',
        period: 'Contact Us',
        items: [
          { description: 'All Pro features, plus:' },
          { description: 'Multi-warehouse support' },
          { description: 'Custom branding & integrations' },
          { description: 'Dedicated support & onboarding' },
        ],
        callToAction: {
          text: 'Contact Sales',
          href: '/contact?inquiry=supplier-enterprise',
        },
      },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="All Sivo Plans Include"
    subtitle="Core features and benefits you get with every Sivo subscription."
    columns={2}
    items={[
      {
        title: 'Secure Cloud Platform',
        description: 'Your data is safe and accessible anytime, anywhere.',
        icon: 'tabler:cloud-lock',
      },
      {
        title: 'Mobile & Web Access',
        description: 'Manage your business on the go or from your desktop.',
        icon: 'tabler:devices',
      },
      {
        title: 'Regular Feature Updates',
        description: 'We continuously improve Sivo with new features and enhancements.',
        icon: 'tabler:refresh-dot',
      },
      {
        title: 'Standard Customer Support',
        description: `Access our help center and email support for any questions.`,
        icon: 'tabler:lifebuoy',
      },
      {
        title: 'Easy Onboarding',
        description: 'Get started quickly with our intuitive interface and helpful guides.',
        icon: 'tabler:chevrons-up',
      },
      {
        title: 'No Long-Term Contracts',
        description: 'Flexible monthly billing. Cancel or change your plan anytime.',
        icon: 'tabler:headset',
      },
    ]}
    classes={{ container: 'max-w-5xl' }}
  />

  <!-- Steps Widget ****************** -->

  <Steps
    title="How to Get Started with Your Sivo Plan"
    tagline="Simple Onboarding Process"
    isReversed={true}
    items={[
      {
        title: 'Choose Your Role',
        description: 'Select whether you are signing up as a Venue or a Supplier.',
        icon: 'tabler:number-1',
      },
      {
        title: 'Select Your Plan',
        description: 'Pick the pricing plan that best fits your business size and needs.',
        icon: 'tabler:number-2',
      },
      {
        title: 'Create Your Account',
        description: 'Provide your business details and create your Sivo login.',
        icon: 'tabler:number-3',
      },
      {
        title: 'Complete Onboarding',
        description: 'Follow our simple setup steps to configure your account, connect with partners, or set up your catalog.',
        icon: 'tabler:number-4',
      },
      {
        title: 'Start Streamlining!',
        description: 'Begin using Sivo to manage your orders, inventory, and supplier/venue relationships.',
        icon: 'tabler:number-5',
      },
    ]}
    image={{
      src: '~/assets/images/sivo-signup-process.png', // Suggestion: Replace with an image illustrating the signup/onboarding flow
      alt: 'Sivo Onboarding Steps',
    }}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Pricing FAQs"
    subtitle="Common questions about Sivo's pricing plans. If you don't find your answer here, please contact us."
    columns={1}
    items={[
      {
        title: 'Can I try Sivo before committing to a plan?',
        description:
          'Yes! We offer a free demo of Sivo so you can see its features in action. For some plans, a limited trial period may be available. Contact sales for more information.',
      },
      {
        title: 'Are there any setup fees or hidden costs?',
        description:
          "Our pricing is transparent. There are no hidden fees. Some enterprise plans with custom integrations might have a one-time setup fee, which will be clearly communicated.",
      },
      {
        title: 'Can I change my plan later?',
        description:
          'Absolutely. You can upgrade or downgrade your plan at any time to better suit your business needs as they change.',
      },
      {
        title: 'What payment methods do you accept?',
        description:
          'We accept all major credit cards. For enterprise plans, we also support bank transfers and other payment methods.',
      },
      {
        title: 'Is there a discount for annual billing?',
        description:
          'Yes, we typically offer a discount for businesses that choose to pay annually. Please check the plan details or contact sales.',
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    title="Ready to Find the Perfect Sivo Plan?"
    subtitle="Take control of your wholesale ordering and unlock new efficiencies for your business."
    actions={[
      {
        variant: 'primary',
        text: 'Request a Demo',
        href: '/contact',
      },
    ]}
  />
</Layout>
